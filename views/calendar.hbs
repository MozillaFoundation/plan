<div id="calendar">
    {{#each milestones}}
    <h2 class="clearfix">{{title}}</h2>
    <ul class="issues">
        {{#each issues}}
        <li>
            <a href="{{html_url}}" target="_blank">
                <h4>{{title}}</h4>
                <ul class="labels">
                    {{#each labels}}
                    <li style="background-color: #{{color}}">{{name}}</li>
                    {{/each}}
                </ul>
            </a>
        </li>
        {{/each}}
    </ul>
    {{/each}}
</div>
